<!DOCTYPE html>
<html>
<head>
  <title>Classwatch</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if user_signed_in? %>
    <div id="userInfo">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <p>
        <%= current_user.email %>
        <a href="#">Settings</a>
        <%= link_to "Log out", destroy_user_session_path, :method => :delete %>
      </p>
    </div>
  <% end %>
  <h1>Classwatch</h1>
  <div id="main">
    <%= yield %>
  </div>
</body>
</html>
