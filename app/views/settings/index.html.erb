<h2>Settings</h2>
<%= form_for @user, :url => {:action => :update} do |f| %>
  <div class="left-column">
    <%= f.error_messages %>
    <%= f.label :email, "Email Address" %>
    <%= f.text_field :email %>

    <%= f.label :old_password, "Change Password" %>
    <div>
      <%= password_field_tag :old_password %>
    </div>
    <div>
      <%= password_field_tag :password %>
    </div>
    <div>
      <%= password_field_tag :confirm_password %>
    </div>
    <%= f.label :phone, "Phone" %>
    <%= f.text_field :phone %>

    <%= f.submit "Save" %>
  </div>
  <div class="right-column">
    Notifications
    <% @notifiers.each do |notifier| %>
      <p>
        <%= check_box_tag :notifier_type, notifier.type %>
        <%= f.label :notifier_type, notifier.description %>
      </p>
    <% end %>
  </div>
  <div class="clear"/>
<% end %>

